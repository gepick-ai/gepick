{
  "root": true,
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@gepick/core/*": [
        "./packages/core/src/*"
      ],
      "@gepick/plugin-api/*": [
        "./packages/plugin-api/src/*"
      ],
      "@gepick/plugin-system/*": [
        "./packages/plugin-system/src/*"
      ],
      "@gepick/plugin-registry/*": [
        "./packages/plugin-registry/src/*"
      ],
      "@gepick/getting-started/*": [
        "./packages/getting-started/src/*"
      ],
      "@gepick/cli/*": [
        "./tools/cli/src/*"
      ]
    }
  },
  "references": [
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/plugin-api"
    },
    {
      "path": "./packages/plugin-system"
    },
    {
      "path": "./packages/plugin-registry"
    },
    {
      "path": "./packages/getting-started"
    },
    {
      "path": "./tools/cli"
    }
  ],
  "include": []
}
